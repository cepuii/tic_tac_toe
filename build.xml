<project name="tic-tac-toe" basedir="." default="build">
  <target name="clean">
    <delete dir="out"/>
  </target>
  <target name="compile">
    <mkdir dir="out/classes"/>
    <javac srcdir="src" destdir="out/classes"/>
  </target>
  <target name="jar" depends="compile">
    <jar destfile="out/tictactoe.jar" basedir="out/classes">
      <manifest>
        <attribute name="Main-Class" value="academy.devonline.tictactoe.Launcher"/>
      </manifest>
    </jar>
  </target>
  <target name="build" depends="jar">
    <delete dir="out/classes"/>
  </target>
</project>